---

const {title, description, link, date} = Astro.props
---

<div class="absolute w-3 h-3 bg-green-400 rounded-full mt-1.5 -start-1.5 border border-green dark:border-green-900 dark:bg-green-700"></div>
      <time class="mb-1 text-sm font-normal leading-none text-white-400 dark:text-white-500 opacity-50">{date}</time>
      <h3 class="text-lg font-semibold text-green-300/80 dark:text-green-400/80 pt-2">{title}</h3>
      <p class="mb-4 text-base font-normal text-white-500 dark:text-white-400 text-pretty opacity-80">{description}</p>
      {
        link && <a href={link} target="_blank" class="text-sm">{link}</a>
      }
